{
    "tools": [
        {
            "name": "render_list_services",
            "description": "List all Render services with status, created date, and URLs.",
            "category": "services",
            "method": "GET",
            "path": "/services",
            "inputSchema": {
                "type": "object",
                "properties": {
                    "limit": {
                        "type": "integer",
                        "default": 20,
                        "description": "Number of results"
                    }
                }
            }
        },
        {
            "name": "render_get_service",
            "description": "Get detailed information about a specific service.",
            "category": "services",
            "method": "GET",
            "path": "/services/{service_id}",
            "inputSchema": {
                "type": "object",
                "properties": {
                    "service_id": {
                        "type": "string",
                        "description": "Service ID"
                    }
                },
                "required": [
                    "service_id"
                ]
            }
        },
        {
            "name": "render_deploy",
            "description": "Trigger a deployment for a service.",
            "category": "deploys",
            "method": "POST",
            "path": "/services/{service_id}/deploys",
            "inputSchema": {
                "type": "object",
                "properties": {
                    "service_id": {
                        "type": "string"
                    }
                },
                "required": [
                    "service_id"
                ]
            }
        },
        {
            "name": "render_list_deploys",
            "description": "List deployment history for a service.",
            "category": "deploys",
            "method": "GET",
            "path": "/services/{service_id}/deploys",
            "inputSchema": {
                "type": "object",
                "properties": {
                    "service_id": {
                        "type": "string"
                    },
                    "limit": {
                        "type": "integer",
                        "default": 20
                    }
                },
                "required": [
                    "service_id"
                ]
            }
        },
        {
            "name": "render_get_deploy",
            "description": "Get status and details of a specific deployment.",
            "category": "deploys",
            "method": "GET",
            "path": "/services/{service_id}/deploys/{deploy_id}",
            "inputSchema": {
                "type": "object",
                "properties": {
                    "service_id": {
                        "type": "string"
                    },
                    "deploy_id": {
                        "type": "string"
                    }
                },
                "required": [
                    "service_id",
                    "deploy_id"
                ]
            }
        },
        {
            "name": "render_update_env",
            "description": "Update environment variables for a service.",
            "category": "services",
            "method": "PUT",
            "path": "/services/{service_id}/env-groups",
            "inputSchema": {
                "type": "object",
                "properties": {
                    "service_id": {
                        "type": "string"
                    },
                    "environment": {
                        "type": "object",
                        "description": "Key-value pairs for environment"
                    }
                },
                "required": [
                    "service_id",
                    "environment"
                ]
            }
        },
        {
            "name": "render_list_events",
            "description": "List service events and activity logs.",
            "category": "events",
            "method": "GET",
            "path": "/services/{service_id}/events",
            "inputSchema": {
                "type": "object",
                "properties": {
                    "service_id": {
                        "type": "string"
                    },
                    "limit": {
                        "type": "integer",
                        "default": 50
                    }
                },
                "required": [
                    "service_id"
                ]
            }
        },
        {
            "name": "render_scale_service",
            "description": "Scale a service (update number of instances).",
            "category": "services",
            "method": "PATCH",
            "path": "/services/{service_id}",
            "inputSchema": {
                "type": "object",
                "properties": {
                    "service_id": {
                        "type": "string"
                    },
                    "num_instances": {
                        "type": "integer",
                        "description": "Number of instances"
                    }
                },
                "required": [
                    "service_id",
                    "num_instances"
                ]
            }
        }
    ]
}