{
    "tools": [
        {
            "name": "deploy_pages",
            "description": "Deploy a local build directory to a Cloudflare Pages project via Wrangler CLI.",
            "category": "pages",
            "method": "POST",
            "path": "wrangler pages deploy",
            "inputSchema": {
                "type": "object",
                "properties": {
                    "dist_path": { "type": "string", "description": "Local build output directory" },
                    "project": { "type": "string", "description": "Pages project name" },
                    "branch": { "type": "string", "default": "main", "description": "Branch label" },
                    "commit_message": { "type": "string", "description": "Optional commit message for Wrangler" }
                },
                "required": ["dist_path", "project"]
            }
        },
        {
            "name": "deploy_te_ao",
            "description": "Run npm build for Te Ao and deploy the dist folder to Cloudflare Pages.",
            "category": "pages",
            "method": "POST",
            "path": "wrangler pages deploy + npm run build",
            "inputSchema": {
                "type": "object",
                "properties": {
                    "project_path": { "type": "string", "description": "Path to the repository root" },
                    "project_name": { "type": "string", "description": "Cloudflare Pages project name" },
                    "branch": { "type": "string", "default": "main" }
                },
                "required": ["project_path", "project_name"]
            }
        },
        {
            "name": "create_project",
            "description": "Create a new Cloudflare Pages project via the Pages API.",
            "category": "projects",
            "method": "POST",
            "path": "/accounts/{account_id}/pages/projects",
            "inputSchema": {
                "type": "object",
                "properties": {
                    "name": { "type": "string" },
                    "production_branch": { "type": "string", "default": "main" }
                },
                "required": ["name"]
            }
        },
        {
            "name": "list_projects",
            "description": "List Cloudflare Pages projects for the configured account.",
            "category": "projects",
            "method": "GET",
            "path": "/accounts/{account_id}/pages/projects",
            "inputSchema": {
                "type": "object"
            }
        },
        {
            "name": "get_project",
            "description": "Return metadata for a specific Pages project.",
            "category": "projects",
            "method": "GET",
            "path": "/accounts/{account_id}/pages/projects/{name}",
            "inputSchema": {
                "type": "object",
                "properties": {
                    "name": { "type": "string" }
                },
                "required": ["name"]
            }
        },
        {
            "name": "set_env_vars",
            "description": "Set environment variables for a Pages project (production and preview).",
            "category": "projects",
            "method": "PATCH",
            "path": "/accounts/{account_id}/pages/projects/{project}",
            "inputSchema": {
                "type": "object",
                "properties": {
                    "project": { "type": "string" },
                    "env_vars": { "type": "object", "description": "Map of env vars" },
                    "preview": { "type": "boolean", "default": false }
                },
                "required": ["project", "env_vars"]
            }
        },
        {
            "name": "list_deployments",
            "description": "List deployments for a Pages project.",
            "category": "deployments",
            "method": "GET",
            "path": "/accounts/{account_id}/pages/projects/{project}/deployments",
            "inputSchema": {
                "type": "object",
                "properties": {
                    "project": { "type": "string" },
                    "limit": { "type": "integer", "default": 10 }
                },
                "required": ["project"]
            }
        },
        {
            "name": "add_custom_domain",
            "description": "Bind a custom domain to a Pages project.",
            "category": "domains",
            "method": "POST",
            "path": "/accounts/{account_id}/pages/projects/{project}/domains",
            "inputSchema": {
                "type": "object",
                "properties": {
                    "project": { "type": "string" },
                    "domain": { "type": "string" }
                },
                "required": ["project", "domain"]
            }
        },
        {
            "name": "purge_cache",
            "description": "Purge the cache for a Cloudflare zone.",
            "category": "cache",
            "method": "POST",
            "path": "/zones/{zone_id}/purge_cache",
            "inputSchema": {
                "type": "object",
                "properties": {
                    "zone_id": { "type": "string" },
                    "purge_everything": { "type": "boolean", "default": true }
                },
                "required": ["zone_id"]
            }
        }
    ]
}
