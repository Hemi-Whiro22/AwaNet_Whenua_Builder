{
  "name": "render",
  "version": "1.1.0",
  "description": "Render MCP commands (hardened): supports service_alias + confirm for writes; env vars keys-only.",
  "commands": {
    "list_services": {
      "description": "List Render services",
      "usage": "@render.list_services(limit=20)",
      "params": {
        "limit": {
          "type": "integer",
          "default": 20
        }
      }
    },
    "get_service": {
      "description": "Get service info (prefer service_alias)",
      "usage": "@render.get_service(service_alias=\"te_po_prod\")",
      "params": {
        "service_id": {
          "type": "string"
        },
        "service_alias": {
          "type": "string"
        }
      }
    },
    "list_deploys": {
      "description": "List deploys",
      "usage": "@render.list_deploys(service_alias=\"te_po_prod\", limit=10)",
      "params": {
        "service_id": {
          "type": "string"
        },
        "service_alias": {
          "type": "string"
        },
        "limit": {
          "type": "integer",
          "default": 10
        }
      }
    },
    "list_env_vars": {
      "description": "List env var keys only",
      "usage": "@render.list_env_vars(service_alias=\"te_po_prod\")",
      "params": {
        "service_id": {
          "type": "string"
        },
        "service_alias": {
          "type": "string"
        }
      }
    },
    "set_env_vars": {
      "description": "Set env vars (requires confirm)",
      "usage": "@render.set_env_vars(service_alias=\"te_po_staging\", env_vars={\"TEPO_URL\":\"...\"}, confirm=\"SET_ENV_VARS\")",
      "params": {
        "service_id": {
          "type": "string"
        },
        "service_alias": {
          "type": "string"
        },
        "env_vars": {
          "type": "object",
          "required": true
        },
        "confirm": {
          "type": "string",
          "required": true
        }
      }
    },
    "deploy": {
      "description": "Trigger deploy (requires confirm)",
      "usage": "@render.deploy(service_alias=\"te_po_prod\", confirm=\"DEPLOY\", clear_cache=false)",
      "params": {
        "service_id": {
          "type": "string"
        },
        "service_alias": {
          "type": "string"
        },
        "confirm": {
          "type": "string",
          "required": true
        },
        "clear_cache": {
          "type": "boolean",
          "default": false
        }
      }
    },
    "suspend_service": {
      "description": "Suspend service (requires confirm)",
      "usage": "@render.suspend_service(service_alias=\"te_po_staging\", confirm=\"SUSPEND\")",
      "params": {
        "service_id": {
          "type": "string"
        },
        "service_alias": {
          "type": "string"
        },
        "confirm": {
          "type": "string",
          "required": true
        }
      }
    },
    "resume_service": {
      "description": "Resume service (requires confirm)",
      "usage": "@render.resume_service(service_alias=\"te_po_staging\", confirm=\"RESUME\")",
      "params": {
        "service_id": {
          "type": "string"
        },
        "service_alias": {
          "type": "string"
        },
        "confirm": {
          "type": "string",
          "required": true
        }
      }
    }
  }
}