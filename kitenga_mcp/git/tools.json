{
    "tools": [
        {
            "name": "git_repo_info",
            "description": "Get repository information including stars, forks, description, and URL.",
            "category": "repository",
            "method": "GET",
            "path": "/repos/{owner}/{repo}",
            "inputSchema": {
                "type": "object",
                "properties": {
                    "owner": {
                        "type": "string",
                        "description": "Repository owner"
                    },
                    "repo": {
                        "type": "string",
                        "description": "Repository name"
                    }
                },
                "required": [
                    "owner",
                    "repo"
                ]
            }
        },
        {
            "name": "git_list_branches",
            "description": "List all branches in a repository with their latest commit SHA.",
            "category": "branches",
            "method": "GET",
            "path": "/repos/{owner}/{repo}/branches",
            "inputSchema": {
                "type": "object",
                "properties": {
                    "owner": {
                        "type": "string"
                    },
                    "repo": {
                        "type": "string"
                    },
                    "per_page": {
                        "type": "integer",
                        "default": 30
                    }
                },
                "required": [
                    "owner",
                    "repo"
                ]
            }
        },
        {
            "name": "git_create_branch",
            "description": "Create a new branch from a specified base branch or commit.",
            "category": "branches",
            "method": "POST",
            "path": "/repos/{owner}/{repo}/git/refs",
            "inputSchema": {
                "type": "object",
                "properties": {
                    "owner": {
                        "type": "string"
                    },
                    "repo": {
                        "type": "string"
                    },
                    "ref": {
                        "type": "string",
                        "description": "Full ref name (refs/heads/branch-name)"
                    },
                    "sha": {
                        "type": "string",
                        "description": "SHA of the commit to base from"
                    }
                },
                "required": [
                    "owner",
                    "repo",
                    "ref",
                    "sha"
                ]
            }
        },
        {
            "name": "git_list_commits",
            "description": "List commits for a branch with author, message, and SHA.",
            "category": "commits",
            "method": "GET",
            "path": "/repos/{owner}/{repo}/commits",
            "inputSchema": {
                "type": "object",
                "properties": {
                    "owner": {
                        "type": "string"
                    },
                    "repo": {
                        "type": "string"
                    },
                    "sha": {
                        "type": "string",
                        "description": "Branch or commit SHA"
                    },
                    "per_page": {
                        "type": "integer",
                        "default": 30
                    }
                },
                "required": [
                    "owner",
                    "repo"
                ]
            }
        },
        {
            "name": "git_get_file",
            "description": "Get file contents from a repository.",
            "category": "files",
            "method": "GET",
            "path": "/repos/{owner}/{repo}/contents/{path}",
            "inputSchema": {
                "type": "object",
                "properties": {
                    "owner": {
                        "type": "string"
                    },
                    "repo": {
                        "type": "string"
                    },
                    "path": {
                        "type": "string",
                        "description": "File path in repo"
                    },
                    "ref": {
                        "type": "string",
                        "description": "Branch/tag/commit"
                    }
                },
                "required": [
                    "owner",
                    "repo",
                    "path"
                ]
            }
        },
        {
            "name": "git_create_file",
            "description": "Create a new file in a repository.",
            "category": "files",
            "method": "PUT",
            "path": "/repos/{owner}/{repo}/contents/{path}",
            "inputSchema": {
                "type": "object",
                "properties": {
                    "owner": {
                        "type": "string"
                    },
                    "repo": {
                        "type": "string"
                    },
                    "path": {
                        "type": "string"
                    },
                    "message": {
                        "type": "string",
                        "description": "Commit message"
                    },
                    "content": {
                        "type": "string",
                        "description": "File content (base64 encoded)"
                    },
                    "branch": {
                        "type": "string",
                        "description": "Target branch"
                    }
                },
                "required": [
                    "owner",
                    "repo",
                    "path",
                    "message",
                    "content"
                ]
            }
        },
        {
            "name": "git_update_file",
            "description": "Update an existing file in a repository.",
            "category": "files",
            "method": "PUT",
            "path": "/repos/{owner}/{repo}/contents/{path}",
            "inputSchema": {
                "type": "object",
                "properties": {
                    "owner": {
                        "type": "string"
                    },
                    "repo": {
                        "type": "string"
                    },
                    "path": {
                        "type": "string"
                    },
                    "message": {
                        "type": "string"
                    },
                    "content": {
                        "type": "string"
                    },
                    "sha": {
                        "type": "string",
                        "description": "Current file SHA"
                    },
                    "branch": {
                        "type": "string"
                    }
                },
                "required": [
                    "owner",
                    "repo",
                    "path",
                    "message",
                    "content",
                    "sha"
                ]
            }
        },
        {
            "name": "git_delete_file",
            "description": "Delete a file from a repository.",
            "category": "files",
            "method": "DELETE",
            "path": "/repos/{owner}/{repo}/contents/{path}",
            "inputSchema": {
                "type": "object",
                "properties": {
                    "owner": {
                        "type": "string"
                    },
                    "repo": {
                        "type": "string"
                    },
                    "path": {
                        "type": "string"
                    },
                    "message": {
                        "type": "string",
                        "description": "Commit message"
                    },
                    "sha": {
                        "type": "string",
                        "description": "File SHA"
                    },
                    "branch": {
                        "type": "string"
                    }
                },
                "required": [
                    "owner",
                    "repo",
                    "path",
                    "message",
                    "sha"
                ]
            }
        },
        {
            "name": "git_list_pull_requests",
            "description": "List pull requests with status, author, and branch info.",
            "category": "pull_requests",
            "method": "GET",
            "path": "/repos/{owner}/{repo}/pulls",
            "inputSchema": {
                "type": "object",
                "properties": {
                    "owner": {
                        "type": "string"
                    },
                    "repo": {
                        "type": "string"
                    },
                    "state": {
                        "type": "string",
                        "enum": [
                            "open",
                            "closed",
                            "all"
                        ],
                        "default": "open"
                    },
                    "per_page": {
                        "type": "integer",
                        "default": 30
                    }
                },
                "required": [
                    "owner",
                    "repo"
                ]
            }
        },
        {
            "name": "git_get_pull_request",
            "description": "Get detailed information about a specific pull request.",
            "category": "pull_requests",
            "method": "GET",
            "path": "/repos/{owner}/{repo}/pulls/{pull_number}",
            "inputSchema": {
                "type": "object",
                "properties": {
                    "owner": {
                        "type": "string"
                    },
                    "repo": {
                        "type": "string"
                    },
                    "pull_number": {
                        "type": "integer"
                    }
                },
                "required": [
                    "owner",
                    "repo",
                    "pull_number"
                ]
            }
        },
        {
            "name": "git_create_pull_request",
            "description": "Create a new pull request from one branch to another.",
            "category": "pull_requests",
            "method": "POST",
            "path": "/repos/{owner}/{repo}/pulls",
            "inputSchema": {
                "type": "object",
                "properties": {
                    "owner": {
                        "type": "string"
                    },
                    "repo": {
                        "type": "string"
                    },
                    "title": {
                        "type": "string"
                    },
                    "body": {
                        "type": "string"
                    },
                    "head": {
                        "type": "string",
                        "description": "Source branch"
                    },
                    "base": {
                        "type": "string",
                        "description": "Target branch"
                    }
                },
                "required": [
                    "owner",
                    "repo",
                    "title",
                    "head",
                    "base"
                ]
            }
        },
        {
            "name": "git_list_issues",
            "description": "List issues in a repository.",
            "category": "issues",
            "method": "GET",
            "path": "/repos/{owner}/{repo}/issues",
            "inputSchema": {
                "type": "object",
                "properties": {
                    "owner": {
                        "type": "string"
                    },
                    "repo": {
                        "type": "string"
                    },
                    "state": {
                        "type": "string",
                        "enum": [
                            "open",
                            "closed",
                            "all"
                        ],
                        "default": "open"
                    },
                    "labels": {
                        "type": "string",
                        "description": "Comma-separated labels"
                    },
                    "per_page": {
                        "type": "integer",
                        "default": 30
                    }
                },
                "required": [
                    "owner",
                    "repo"
                ]
            }
        },
        {
            "name": "git_create_issue",
            "description": "Create a new issue in a repository.",
            "category": "issues",
            "method": "POST",
            "path": "/repos/{owner}/{repo}/issues",
            "inputSchema": {
                "type": "object",
                "properties": {
                    "owner": {
                        "type": "string"
                    },
                    "repo": {
                        "type": "string"
                    },
                    "title": {
                        "type": "string"
                    },
                    "body": {
                        "type": "string"
                    },
                    "labels": {
                        "type": "array",
                        "items": {
                            "type": "string"
                        }
                    },
                    "assignees": {
                        "type": "array",
                        "items": {
                            "type": "string"
                        }
                    }
                },
                "required": [
                    "owner",
                    "repo",
                    "title"
                ]
            }
        },
        {
            "name": "git_list_releases",
            "description": "List releases for a repository.",
            "category": "releases",
            "method": "GET",
            "path": "/repos/{owner}/{repo}/releases",
            "inputSchema": {
                "type": "object",
                "properties": {
                    "owner": {
                        "type": "string"
                    },
                    "repo": {
                        "type": "string"
                    },
                    "per_page": {
                        "type": "integer",
                        "default": 30
                    }
                },
                "required": [
                    "owner",
                    "repo"
                ]
            }
        },
        {
            "name": "git_create_release",
            "description": "Create a new release with tag and notes.",
            "category": "releases",
            "method": "POST",
            "path": "/repos/{owner}/{repo}/releases",
            "inputSchema": {
                "type": "object",
                "properties": {
                    "owner": {
                        "type": "string"
                    },
                    "repo": {
                        "type": "string"
                    },
                    "tag_name": {
                        "type": "string"
                    },
                    "name": {
                        "type": "string"
                    },
                    "body": {
                        "type": "string"
                    },
                    "draft": {
                        "type": "boolean",
                        "default": false
                    },
                    "prerelease": {
                        "type": "boolean",
                        "default": false
                    }
                },
                "required": [
                    "owner",
                    "repo",
                    "tag_name"
                ]
            }
        },
        {
            "name": "git_get_user",
            "description": "Get GitHub user profile information.",
            "category": "users",
            "method": "GET",
            "path": "/user",
            "inputSchema": {
                "type": "object"
            }
        },
        {
            "name": "git_list_workflows",
            "description": "List GitHub Actions workflows in a repository.",
            "category": "actions",
            "method": "GET",
            "path": "/repos/{owner}/{repo}/actions/workflows",
            "inputSchema": {
                "type": "object",
                "properties": {
                    "owner": {
                        "type": "string"
                    },
                    "repo": {
                        "type": "string"
                    }
                },
                "required": [
                    "owner",
                    "repo"
                ]
            }
        }
    ]
}