{
  "openapi": "3.1.0",
  "info": {
    "title": "Kitenga Whiro Responses API",
    "version": "1.0.0",
    "description": "OpenAI Responses API glue for Kitenga Whiro (via kitenga_mcp/openai)."
  },
  "servers": [
    {
      "url": "https://tiwhanawhana-backend.onrender.com/openai",
      "description": "Render production endpoint (adjust for your deployment)"
    },
    {
      "url": "http://localhost:8000/openai",
      "description": "Local dev (requires tunnel when calling from GPT Build)"
    }
  ],
  "components": {
    "schemas": {
      "responses_generate": {
        "type": "object",
        "properties": {
          "model": {
            "type": "string",
            "description": "Model to execute",
            "default": "gpt-5"
          },
          "input": {
            "type": "string",
            "description": "User input text"
          },
          "instructions": {
            "type": "string",
            "description": "Optional system instructions"
          },
          "max_output_tokens": {
            "type": "integer",
            "description": "Optional token limit"
          },
          "temperature": {
            "type": "number",
            "description": "Sampling temperature"
          },
          "background": {
            "type": "boolean",
            "description": "Run the request in background mode",
            "default": false
          },
          "metadata": {
            "type": "object",
            "description": "Optional metadata"
          }
        },
        "required": ["input"]
      }
    },
    "securitySchemes": {
      "bearerAuth": {
        "type": "http",
        "scheme": "bearer",
        "bearerFormat": "API Key"
      }
    }
  },
  "paths": {
    "/responses": {
      "post": {
        "operationId": "responses_generate",
        "summary": "Generate a response",
        "description": "Create a response via the OpenAI Responses API.",
        "requestBody": {
          "required": true,
          "content": {
            "application/json": {
              "schema": {
                "$ref": "#/components/schemas/responses_generate"
              }
            }
          }
        },
        "responses": {
          "200": {
            "description": "Response generated successfully",
            "content": {
              "application/json": {
                "schema": {
                  "type": "object",
                  "description": "Placeholder for entire Responses API payload",
                  "properties": {}
                }
              }
            }
          }
        },
        "security": [
          {
            "bearerAuth": []
          }
        ]
      }
    },
    "/responses/{response_id}": {
      "get": {
        "operationId": "responses_get",
        "summary": "Retrieve a response",
        "description": "Fetch a previously generated response by ID.",
        "parameters": [
          {
            "name": "response_id",
            "in": "path",
            "required": true,
            "schema": {
              "type": "string"
            },
            "description": "Response identifier"
          }
        ],
        "responses": {
          "200": {
            "description": "Retrieved response",
            "content": {
              "application/json": {
                "schema": {
                  "type": "object",
                  "properties": {}
                }
              }
            }
          }
        },
        "security": [
          {
            "bearerAuth": []
          }
        ]
      }
    }
  }
}
