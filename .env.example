# --- Runtime ---
ENVIRONMENT=development
HOST=0.0.0.0
PORT=8000

# --- Authentication ---
BEARER_KEY=replace-with-shared-secret
REALM_ID=researcher

# --- Realm Configuration ---
# Supports per-realm override using REALM_CONFIG_PATH_<REALM>.
REALM_CONFIG_PATH=mauri/realms/{realm}/manifest.json

# --- OpenAI ---
OPENAI_API_KEY=sk-your-openai-api-key
OPENAI_ASSISTANT_ID_RESEARCHER=asst_researcher_REPLACE_ME
OPENAI_VECTOR_STORE_ID_RESEARCHER=vs_researcher_REPLACE_ME
OPENAI_ASSISTANT_ID_TRANSLATOR=asst_translator_REPLACE_ME
OPENAI_VECTOR_STORE_ID_TRANSLATOR=vs_translator_REPLACE_ME

# --- Recall Feature Flags ---
ENABLE_OPENAI_VECTOR_RECALL=0

# --- Supabase ---
SUPABASE_URL=https://your-project.supabase.co
SUPABASE_KEY=your-service-role-key
SUPABASE_SERVICE_ROLE_KEY=${SUPABASE_KEY}
SUPABASE_ANON_KEY=your-anon-key

# --- Upstream / Proxy Backends ---
TE_PO_URL=http://localhost:8000
TE_PO_BASE_URL=${TE_PO_URL}

