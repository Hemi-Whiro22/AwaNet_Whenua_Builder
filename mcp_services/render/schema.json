{
    "name": "render",
    "version": "1.0.0",
    "description": "Render Deployment Service Schema",
    "baseUrl": "https://api.render.com/v1",
    "authentication": {
        "type": "bearer",
        "tokenEnv": "RENDER_API_KEY",
        "required": true
    },
    "services": {
        "services": {
            "description": "Render services (web, background, cron, etc)",
            "endpoints": [
                "/services",
                "/services/{service_id}",
                "/services/{service_id}/deploys",
                "/services/{service_id}/env-groups"
            ]
        },
        "deploys": {
            "description": "Deployment management",
            "endpoints": [
                "/services/{service_id}/deploys",
                "/services/{service_id}/deploys/{deploy_id}"
            ]
        },
        "events": {
            "description": "Event logs and monitoring",
            "endpoints": [
                "/services/{service_id}/events"
            ]
        },
        "owner": {
            "description": "Owner/account information",
            "endpoints": [
                "/owners",
                "/owners/{owner_id}"
            ]
        }
    },
    "inputSchema": {
        "$schema": "http://json-schema.org/draft-07/schema#",
        "type": "object",
        "properties": {
            "service_id": {
                "type": "string",
                "description": "Render service ID"
            },
            "deploy_id": {
                "type": "string",
                "description": "Deployment ID"
            },
            "environment": {
                "type": "object",
                "description": "Environment variables"
            },
            "limit": {
                "type": "integer",
                "description": "Pagination limit"
            }
        }
    },
    "outputSchema": {
        "$schema": "http://json-schema.org/draft-07/schema#",
        "type": "object",
        "properties": {
            "status": {
                "type": "integer"
            },
            "data": {
                "type": "object"
            },
            "error": {
                "type": "string"
            }
        }
    }
}