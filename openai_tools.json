{
  "openapi": "3.1.0",
  "info": {
    "title": "Te Pō Assistant Bridge",
    "version": "1.0.0",
    "description": "Gateway between GPT Builder and the Kitenga Whiro / Te Pō backend assistant."
  },
  "servers": [
    {
      "url": "https://tiwhanawhana-backend.onrender.com"
    }
  ],
  "paths": {
    "/assistant/run": {
      "post": {
        "summary": "Run the Kitenga Whiro Assistant",
        "description": "Posts text or file info to the Te Pō backend, which relays to the OpenAI Assistant (asst_WvuWFEv2FpNWwEn11gbvSbHA) and connected vector store (vs_692ee26573688191817773029871850d).",
        "operationId": "assistant_run",
        "requestBody": {
          "required": true,
          "content": {
            "application/json": {
              "schema": {
                "type": "object",
                "properties": {
                  "text": {
                    "type": "string",
                    "description": "User text to send to the assistant."
                  },
                  "thread_id": {
                    "type": "string",
                    "description": "Optional thread id for continuity."
                  },
                  "metadata": {
                    "type": "object",
                    "description": "Optional metadata or tags for logging."
                  }
                },
                "required": [
                  "text"
                ]
              }
            }
          }
        },
        "responses": {
          "200": {
            "description": "Assistant output JSON"
          }
        }
      }
    },
    "/assistant/health": {
      "get": {
        "summary": "Health check for the bridge",
        "operationId": "assistant_health",
        "responses": {
          "200": {
            "description": "Status JSON showing ok/missing keys"
          }
        }
      }
    }
  }
}