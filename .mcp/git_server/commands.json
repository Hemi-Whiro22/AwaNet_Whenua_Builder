{
  "name": "git",
  "version": "1.0.0",
  "description": "Git/GitHub MCP Server commands for AwaOS",
  "commands": {
    "init": {
      "description": "Initialize a new git repository",
      "usage": "@git.init(path=\"./my-realm\")",
      "params": {
        "path": {"type": "string", "required": true}
      },
      "returns": "Initialization confirmation"
    },
    "commit_push": {
      "description": "Add all files, commit, and push to remote",
      "usage": "@git.commit_push(path=\"./myproject\", message=\"Initial commit\")",
      "params": {
        "path": {"type": "string", "required": true},
        "message": {"type": "string", "required": true}
      },
      "returns": "Results of add, commit, and push operations"
    },
    "status": {
      "description": "Get repository status (short format)",
      "usage": "@git.status(path=\"./myproject\")",
      "params": {
        "path": {"type": "string", "required": true}
      },
      "returns": "Git status output"
    },
    "log": {
      "description": "Get recent commit history",
      "usage": "@git.log(path=\"./myproject\", count=10)",
      "params": {
        "path": {"type": "string", "required": true},
        "count": {"type": "integer", "default": 5}
      },
      "returns": "Commit log (oneline format)"
    },
    "branch": {
      "description": "List branches or create a new branch",
      "usage": "@git.branch(path=\"./myproject\", name=\"feature/translate\")",
      "params": {
        "path": {"type": "string", "required": true},
        "name": {"type": "string", "description": "New branch name (optional)"}
      },
      "returns": "Branch list or creation confirmation"
    },
    "checkout": {
      "description": "Checkout a branch, tag, or commit",
      "usage": "@git.checkout(path=\"./myproject\", ref=\"main\")",
      "params": {
        "path": {"type": "string", "required": true},
        "ref": {"type": "string", "required": true}
      },
      "returns": "Checkout result"
    },
    "tag": {
      "description": "Create an annotated tag",
      "usage": "@git.tag(path=\"./myproject\", name=\"v1.0.0\", message=\"Release 1.0\")",
      "params": {
        "path": {"type": "string", "required": true},
        "name": {"type": "string", "required": true},
        "message": {"type": "string", "description": "Tag message (optional)"}
      },
      "returns": "Tag creation result"
    },
    "rollback": {
      "description": "Rollback to a specific tag",
      "usage": "@git.rollback(path=\"./myproject\", tag=\"v0.9.0\")",
      "params": {
        "path": {"type": "string", "required": true},
        "tag": {"type": "string", "required": true}
      },
      "returns": "Rollback result"
    },
    "remote_add": {
      "description": "Add a git remote",
      "usage": "@git.remote_add(path=\"./myproject\", name=\"origin\", url=\"git@github.com:...\")",
      "params": {
        "path": {"type": "string", "required": true},
        "name": {"type": "string", "default": "origin"},
        "url": {"type": "string", "required": true}
      },
      "returns": "Remote addition result"
    },
    "github_create_repo": {
      "description": "Create a new GitHub repository",
      "usage": "@git.github_create_repo(name=\"my-realm\", description=\"AwaOS realm\", private=true)",
      "params": {
        "name": {"type": "string", "required": true},
        "description": {"type": "string", "default": ""},
        "private": {"type": "boolean", "default": true},
        "org": {"type": "string", "description": "Organization name (optional)"}
      },
      "returns": "Repository details with clone URLs"
    },
    "github_list_repos": {
      "description": "List your GitHub repositories",
      "usage": "@git.github_list_repos(limit=20)",
      "params": {
        "limit": {"type": "integer", "default": 30}
      },
      "returns": "Array of repository summaries"
    },
    "github_create_release": {
      "description": "Create a GitHub release",
      "usage": "@git.github_create_release(repo=\"user/repo\", tag=\"v1.0.0\", name=\"Release 1.0\")",
      "params": {
        "repo": {"type": "string", "required": true, "description": "owner/repo format"},
        "tag": {"type": "string", "required": true},
        "name": {"type": "string", "required": true},
        "body": {"type": "string", "default": ""},
        "prerelease": {"type": "boolean", "default": false}
      },
      "returns": "Release details with URL"
    }
  }
}
